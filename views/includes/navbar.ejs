
<style>

.search-bar button{
    background-color: #fe424d;
    color: #fff;
    padding: 0 1.3rem 0 1.3rem;
    border-radius: 25px;
}


.profile-icon-link {
  display: inline-block;
  width: 42px;
  height: 42px;
  border-radius: 50%;
  overflow: hidden;
  border: 2px solid #ccc;
  transition: border-color 0.3s ease;
}

.profile-icon-link:hover {
  border-color: #fe424d;
}

.profile-icon {
  width: 100%;
  height: 100%;
  object-fit: cover;
  display: block;
}


@media (min-width:768px) {
  #newlistoption{
    margin-right: 2rem;
  }
}

@media (max-width:768px) {
  #newlistoption{
    margin-top: 4px;
    padding-bottom: 0;
  }
}


</style>



<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/listings"><i class="fa-solid fa-compass"></i></a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse mobile-nav-bg" id="navbarNavAltMarkup">
        <div class="navbar-nav">
          <a class="nav-link" href="/listings">Explore</a>
        </div>

        <div class="search-bar ms-auto navbar-nav">
          <form class="d-flex" action="/listings" method="get">
            <input class="form-control mr-sm-2 search-inp" type="search" placeholder="Search" aria-label="Search" name="search" required>
            <button class="btn btn-outline-danger my-2 my-sm-0 ms-2" type="submit"><i class="fa-solid fa-magnifying-glass" style="display: inline;margin-right: 3px;"></i>Search</button>
          </form>
        </div>
        

        <div class="navbar-nav ms-auto">
          <a class="nav-link" id="newlistoption" href="/listings/new">Add new Listing</a>
          <%if(!currUser){%> 
            <!-- if user is not logged in then show the below two buttons , otherwise only logout one -->
            <a class="nav-link login" href="/login"><b>Login</b></a>
          <a class="nav-link signup" href="/signup"><b>Signup</b></a>
          <%}%>
          <%if(currUser){%>
              <a href="/dashboard" class="profile-icon-link d-none d-md-inline-block" title="Go to Dashboard">
                <img src="<%= currUser.profileImage.url || '/uploads/user.png' %>" alt="Profile Picture" class="profile-icon">
              </a>

               <a class="nav-link d-md-none" href="/dashboard"><b>Dashboard</b></a>
                <!-- Mobile logout -->
                <a class="nav-link d-md-none" href="/logout"><b>Logout</b></a>
          <!-- <a class="nav-link" href="/logout">Logout</a> -->
         <% }%>
        </div>


      </div>
    </div>
  </nav>

<!-- to clear the search bar after searching -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const searchForm = document.querySelector(".search-bar form");
    searchForm.addEventListener("submit", () => {
      const searchInput = searchForm.querySelector('input[name="search"]');
      setTimeout(() => {
        searchInput.value = ""; // Clears input after form submission
      }, 10);
    });
  });
</script>

<% layout('layouts/boilerplate') %>

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
  <div class="text-center">
    
    <!-- Spinner (initially visible) -->
    <div id="loading" class="mb-4">
      <div class="spinner-border text-success" style="width: 4rem; height: 4rem;" role="status">
        <span class="visually-hidden">Loading...</span>
      </div>
      <p class="mt-3 text-muted">Confirming your booking...</p>
    </div>

    <!-- Success message (initially hidden) -->
    <div id="success" class="d-none">
      <div class="mb-4">
        <svg width="120" height="120" viewBox="0 0 16 16" class="bi bi-check-circle-fill text-success" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
          <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM6.97 11.03a.75.75 0 0 0 1.06 0l4.243-4.243a.75.75 0 1 0-1.06-1.06L7.5 9.44 5.788 7.727a.75.75 0 1 0-1.06 1.06l2.242 2.243z"/>
        </svg>
      </div>
      <h2 class="text-success">Booking Confirmed</h2>
      <p class="text-muted">Thank you for your reservation!</p>
    </div>

  </div>
</div>

<script>
  // After 2.5 seconds, show tick and message
  setTimeout(() => {
    document.getElementById('loading').classList.add('d-none');
    document.getElementById('success').classList.remove('d-none');
  }, 2000);
</script>
